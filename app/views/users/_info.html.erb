<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
  <% if user == current_user %>
    <%= link_to "edit",edit_user_path(user) %>
  <% else %>
    <%= link_to "edit",user_path(current_user) %>
  <% end %>
</div>